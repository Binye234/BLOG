<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        hr{
            margin:5px;
        }
    </style>
</head>
<body style="background-color:gainsboro">
    @*导航条*@
    <div class="navbar navbar-default navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href=javascript:void(0)>
                    <span class="glyphicon glyphicon-thumbs-up" style="color:orangered"></span>
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("主页", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("添加", "Add", "Manage")</li>
                    <li>@Html.ActionLink("删除", "Delete", "Manage")</li>
                 
                </ul>
                    <form class="navbar-form navbar-right" action="@Url.Action("FIndTitle","Home")">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="搜博主文章" name="title">
                        </div>
                        <button type="submit" class="btn btn btn-success">搜索</button>
                    </form>
            </div> 
        </div>
    </div>
    @*头图片*@
    <header style="background:url(/image/bg-title.png) no-repeat center;background-size: 1920px auto;height: 140px; ">
            <div class="container">
                <h2 style="color:#fff">梁斌的博客</h2>
                <p style="color: #b8b8b8;">探寻未知</p>
            </div>
    </header>
    <div class="container body-content">
        @RenderBody()
      
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
